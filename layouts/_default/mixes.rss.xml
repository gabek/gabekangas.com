{{- $pctx := . -}}
{{- if .IsHome -}}{{ $pctx = .Site }}{{- end -}}
{{- $pages := slice -}}
{{- if or $.IsHome $.IsSection -}}
{{- $pages = $pctx.RegularPages -}}
{{- else -}}
{{- $pages = $pctx.Pages -}}
{{- end -}}
{{- $limit := .Site.Config.Services.RSS.Limit -}}
{{- if ge $limit 1 -}}
{{- $pages = $pages | first $limit -}}
{{- end -}}
{{- printf "<?xml version=\"1.0\" encoding=\"UTF-8\"?>" | safeHTML }}
<rss xmlns:itunes="http://www.itunes.com/DTDs/Podcast-1.0.dtd" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:content="http://purl.org/rss/1.0/modules/content/" version="2.0">
  <channel>
    <title>Mixes by Gabe Kangas</title>
    <description>Some audio Gabe has made available for you to listen to.</description>
    <link>https://gabekangas.com</link>
    <author>gabek@real-ity.com</author>

    {{ with .Site.LanguageCode }}
    <language>{{.}}</language>{{end}}{{ with .Site.Author.email }}
    <copyright>{{.}}</copyright>{{end}}{{ if not .Date.IsZero }}
    <lastBuildDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</lastBuildDate>{{ end }}

    <itunes:owner>
      <itunes:name>Gabe Kangas</itunes:name>
      <itunes:email>gabek@real-ity.com</itunes:email>
    </itunes:owner>

    <itunes:image href="{{ "/images/avatar.png" | absURL }}">
      <url>{{ "/images/avatar.png" | absURL }}</url>
      <title>Gabe Kangas</title>
      <link>{{ "/" | absURL }}</link>
    </itunes:image>
    <itunes:link rel="image" type="image/png" href="{{ "/images/avatar.png" | absURL }}">- FeedForAll Podcasting Tutorial</itunes:link>
    <itunes:summary>Some audio Gabe has made available for you to listen to.</itunes:summary>
    <itunes:subtitle>Some audio Gabe has made available for you to listen to.</itunes:subtitle>
    <itunes:category text="Music"></itunes:category>
    <itunes:explicit>No</itunes:explicit>

    {{ with .OutputFormats.Get "RSS" }}
	{{ printf "<atom:link href=%q rel=\"self\" type=%q />" .Permalink .MediaType | safeHTML }}
    {{ end }}
    {{ range $pages }}
    <item>
<title>{{ .Title }}</title>
<link>{{ .Permalink }}</link>
<pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</pubDate>
      {{ with .Site.Author.email }}<author>{{.}}{{ with $.Site.Author.name }} ({{.}}){{end}}</author>{{end}}
      <guid>{{ .Permalink }}</guid>
      {{ with .Params.enclosure | absURL }}
        <enclosure url="{{.}}" type="audio/mpeg" />
      {{end}}
<itunes:summary>{{ .Summary | html }}</itunes:summary>
<description>{{ .Summary | html }}</description>
<content:encoded>
      {{ `  <![CDATA[` | safeHTML }}
        {{ .Content }}
      {{ `]]>` | safeHTML }}
</content:encoded>
<image>
  <url>{{.Params.cardthumbimage | absURL}}</url>
  <link>{{ "/" | absURL }}</link>
</image>

</item>
    {{ end }}
  </channel>
</rss>